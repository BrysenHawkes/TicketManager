@model IEnumerable<Ticket_Manager.Models.Ticket>

<div class="container p-3">
    <div class="row pt-4">
        <div class=" col-6">
            <h2 class="text-primary">Ticket List</h2>
        </div>
        <div class=" col-6 text-right">
            <a asp-controller="Ticket" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-square"></i> &nbsp; Create New Ticket
            </a>
        </div>
    </div>
    <div class="col-12">
        <form method="post" asp-action="Create">
        </form>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Ticket Name
                    </th>
                    <th>
                        Priority
                    </th>
                    <th>
                        Project ID
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Context.Request.Cookies["CurrentProject"] != null)
                {
                    @foreach (var obj in Model)
                    {
                        @if (obj.ProjectID == int.Parse(Context.Request.Cookies["CurrentProject"]))
                        {
                            <tr>
                                <td>@obj.Name</td>
                                <td>@obj.Priority</td>
                                <td>@obj.ProjectID</td>
                                <td class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-controller="Ticket" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="Ticket" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tickets Exist</p>
    }
